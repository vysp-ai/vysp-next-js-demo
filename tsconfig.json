{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["../vysp-next-js-demo/src/*"]
    }
  },
  "include": ["../vysp-next-js-demo/next-env.d.ts", "../vysp-next-js-demo/**/*.ts", "../vysp-next-js-demo/**/*.tsx"],
  "exclude": ["../vysp-next-js-demo/node_modules"]
}
